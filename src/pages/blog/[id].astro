---
import { getContents } from "@lib/microcms";

import Layout from "@layouts/Layout.astro";
import PostDetailPageTemplate from "@components/templates/PostDetailPageTemplate.astro";

// routing
export async function getStaticPaths() {
  const response = await getContents("blog");
  return response.map((content: any) => ({
    params: {
      id: content.id,
    },
  }));
}
---

<Layout title="My first blog with Astro">
  <PostDetailPageTemplate type="blog" />
</Layout>
