---
import { getContents } from "@lib/microcms";

import Layout from "@layouts/Layout.astro";
import ArticleDetailTemplate from "@components/templates/ArticleDetailTemplate.astro";

// 詳細記事ページの全パスを取得
export async function getStaticPaths() {
  const response = await getContents("blog");
  return response.map((content: any) => ({
    params: {
      id: content.id,
    },
  }));
}
---

<Layout title="My first blog with Astro">
  <ArticleDetailTemplate type="blog" />
</Layout>
